#!/usr/bin/env php
<?php

ini_set('error_reporting', E_ALL);
ini_set('display_errors', 1);
ini_set('display_startup_errors', 1);

require __DIR__ . '/../vendor/autoload.php';


use App\Store\InMemoryKeyValueStore;
use App\Store\YamlKeyValuesStore;

echo \sprintf("Value Store in Memory\n");

$storage = new InMemoryKeyValueStore();
$storage->set('time', date('H-i-s'));
echo \sprintf("Example: use method get and has. Result: key = %s value = %s \n", $storage->get('time'), 'time');


echo \sprintf("-----\nValue Store in Yaml\n");
$storage = new YamlKeyValuesStore('./data/key-value-store.yaml');
$storage->set('time', date('H-i-s'));
